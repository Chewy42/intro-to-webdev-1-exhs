entrypoint = "index.html"
modules = ["web"]

[nix]
channel = "stable-25_05"
packages = ["static-web-server"]

[workflows]
runButton = "Serve static"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
# Use sws.toml to disable caching during dev
args = "static-web-server --root . --port 80 --config-file ./sws.toml"

waitForPort = 80

[[ports]]
localPort = 80
externalPort = 80

[deployment]
publicDir = "/"
deploymentTarget = "static"

# Safe defaults for when you later publish: ensure fresh HTML
[[deployment.responseHeaders]]
path = "/*.html"
name = "Cache-Control"
value = "no-cache, no-store, must-revalidate"

[[deployment.responseHeaders]]
path = "/*.html"
name = "Pragma"
value = "no-cache"

[[deployment.responseHeaders]]
path = "/*.html"
name = "Expires"
value = "0"

# Optional: short/zero cache for CSS/JS when published without hashing
[[deployment.responseHeaders]]
path = "/**/*.{css,js}"
name = "Cache-Control"
value = "max-age=0, must-revalidate"

# SPA-friendly optional rewrite (remove if not an SPA)
# [[deployment.rewrites]]
# from = "/*"
# to = "/index.html"

[agent]
expertMode = true
