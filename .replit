entrypoint = "index.html"
modules = ["nix"]

[nix]
channel = "stable-25_05"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "static"

[workflows]
runButton = "Serve static"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
# This is the corrected line:
args = "static-web-server --root . --port 80"

waitForPort = 80

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
